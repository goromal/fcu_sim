<?xml version="1.0"?>

<robot name="boat" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Properties -->
  <xacro:property name="namespace" value="boat" />
  <xacro:property name="use_mesh_file" value="true" />
  <xacro:property name="mesh_file" value="package://fcu_sim/meshes/Boat/boat.dae" />
  <xacro:property name="mass" value="2.0" />
  <xacro:property name="body_width" value="0.505" />
  <xacro:property name="body_height" value="0.1" />
  <xacro:property name="body_inertia">
    <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05" />
  </xacro:property>


  <!-- *********************** GAZEBO ROBOT DEFINITION ******************* -->
  <link name="${namespace}/base_link">
    <inertial>
      <mass value="${mass}" />  <!-- [kg] -->
      <origin xyz="10 0 0" />
      <xacro:insert_block name="body_inertia" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <xacro:if value="${use_mesh_file}">
          <mesh filename="${mesh_file}" scale="0.25 0.25 0.25" />
        </xacro:if>
        <xacro:unless value="${use_mesh_file}">
          <cylinder length="${body_height}" radius="${body_width}"/>
        </xacro:unless>
      </geometry>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="${body_height}" radius="${body_width}"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="${namespace}/base_link">
    <material>Gazebo/$(arg color)</material>
  </gazebo>


  <!-- ************************* FORCES AND MOMENTS ********************** -->

  <!-- ROSflight_SIL -->
  <!--<xacro:include filename="$(find fcu_sim_plugins)/xacro/ROSflight_SIL.xacro"/>-->
  
  <xacro:include filename="$(find fcu_sim_plugins)/xacro/boat_forces_and_moments.xacro"/>
  <xacro:boat_controller
  	namespace="${namespace}"
  	command_topic="boat_command"/>
  
  <!-- ************************ GIMBAL COMMANDER ********************** -->
  <!-- should not be used; does not move the boat but rather a hypothetical camera
       according to the boat's orientation.
  <xacro:include filename="$(find fcu_sim_plugins)/xacro/boat_tow.xacro"/>
  <xacro:gimbal_BOAT
  	namespace="${namespace}"
  	parent_link="${namespace}/base_link"
  	camera_topic="${namespace}/boatcam/data"
  	frame_rate="1"
  	pose_topic="${namespace}/boatpose"
  	command_topic="${namespace}/boat_command"
  	use_slipring="true">
  	<origin xyz="10 0 0" rpy="0 0 0"/>
  </xacro:gimbal_BOAT> -->

  <!-- ***************** SENSORS ******************* -->
  <!-- Ground Truth (Odometry plugin gets orientation info from gazebo and publishes it
  		on the ROS network (as /.../ground_truth/odometry)-->
  <xacro:include filename="$(find fcu_sim_plugins)/xacro/odometry_sensor.xacro"/>
  <xacro:ground_truth namespace="${namespace}" parent_link="${namespace}/base_link" />

  <!-- Mount an IMU (not being used when you have odometry plugin)-->
  <xacro:include filename="$(find fcu_sim_plugins)/xacro/imu.xacro"/>
  <xacro:perfect_IMU
    namespace="${namespace}"
    parent_link="${namespace}/base_link"
    imu_topic="imu/data"/>

</robot>
